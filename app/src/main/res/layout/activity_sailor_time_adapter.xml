<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.timeisreal.admin.sailortimer.SailorTimeAdapter">

    <TextView
        android:id="@+id/timeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:text="@string/timeValue"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearContainer"
        android:layout_below="@id/timeValue">

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="@string/button_start"
            android:layout_marginBottom="5dp"
            android:id="@+id/startButton"
            android:focusable="true"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="@string/button_pause"
            android:id="@+id/pauseButton"
            android:focusable="true"
            android:visibility="gone"/>
    </LinearLayout>


    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@id/linearContainer"
        android:text="@string/button_reset"
        android:layout_below="@id/timeValue"
        android:layout_alignBaseline="@id/linearContainer"
        android:id="@+id/resetButton"
        android:focusable="true"/>

</RelativeLayout>
